<% if logged_in? && current_user.username == @user.username %>
  <h1 class="center">Hey <%= current_user.username %>, this is your profile page!</h1>
<% else %>
  <h1 class="center">Welcome to <%= @user.username %>'s Page</h1>
<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<% if logged_in? && current_user.username == @user.username %>
  <h4 class="center">Your Articles</h4>
<% else %>
  <h4 class="center"><%= @user.username %>'s Articles</h4>
<% end %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>